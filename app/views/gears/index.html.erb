<div class="product-listing">
  <ul>
    <% @gears.each do |gear| %>
    <li>
      <div class="card-product">
        <img src="<%= gear.img_url %>" alt="" class="card-images">     
        <div class="card-product-infos">
          <h3><%= link_to gear.name, gear_path(gear) %></h3>
          <p>$<%= gear.price %> / day</p>
          <p class="delete-button"><%= link_to "delete", gear_path(gear), method: :delete %></p>
        </div>
      </div> 
    </li>
    <% end %>
  </ul>
</div>



